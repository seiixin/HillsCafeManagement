<UserControl
    x:Class="HillsCafeManagement.Views.Admin.Payrolls.AddEditPayroll"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    mc:Ignorable="d"
    d:DesignWidth="400" d:DesignHeight="600"
    Background="#99000000">

    <!-- semi-transparent overlay -->
    <Border
        Width="400"
        Background="White"
        Padding="20"
        CornerRadius="10"
        VerticalAlignment="Center"
        HorizontalAlignment="Center">

        <!-- Scrollable content -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="500">
            <StackPanel>

                <!-- Title -->
                <TextBlock x:Name="TitleText"
                           Text="Add / Edit Payroll"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#6378FF"
                           Margin="0,0,0,10"
                           TextAlignment="Center" />

                <!-- Employee -->
                <TextBlock Text="Employee:" FontWeight="Bold" />
                <ComboBox x:Name="EmployeeComboBox"
                          Margin="0,0,0,10"
                          DisplayMemberPath="FullName"
                          SelectedValuePath="Id"
                          ItemsSource="{Binding Employees}" />

                <!-- Start Date -->
                <TextBlock Text="Start Date:" FontWeight="Bold" />
                <DatePicker x:Name="StartDatePicker"
                            Margin="0,0,0,10" />

                <!-- End Date -->
                <TextBlock Text="End Date:" FontWeight="Bold" />
                <DatePicker x:Name="EndDatePicker"
                            Margin="0,0,0,10" />

                <!-- Total Days Worked -->
                <TextBlock Text="Total Days Worked:" FontWeight="Bold" />
                <TextBox x:Name="DaysWorkedTextBox"
                         Margin="0,0,0,10" />

                <!-- Gross Salary -->
                <TextBlock Text="Gross Salary:" FontWeight="Bold" />
                <TextBox x:Name="GrossSalaryTextBox"
                         Margin="0,0,0,10" />

                <!-- Deductions -->
                <TextBlock Text="SSS Deduction:" FontWeight="Bold" />
                <TextBox x:Name="SSSTextBox"
                         Margin="0,0,0,10" />

                <TextBlock Text="PhilHealth Deduction:" FontWeight="Bold" />
                <TextBox x:Name="PhilhealthTextBox"
                         Margin="0,0,0,10" />

                <TextBlock Text="Pag-IBIG Deduction:" FontWeight="Bold" />
                <TextBox x:Name="PagibigTextBox"
                         Margin="0,0,0,10" />

                <TextBlock Text="Other Deductions:" FontWeight="Bold" />
                <TextBox x:Name="OtherDeductionsTextBox"
                         Margin="0,0,0,10" />

                <!-- Bonus -->
                <TextBlock Text="Bonus:" FontWeight="Bold" />
                <TextBox x:Name="BonusTextBox"
                         Margin="0,0,0,10" />

                <!-- Net Salary (Readonly) -->
                <TextBlock Text="Net Salary:" FontWeight="Bold" />
                <TextBox x:Name="NetSalaryTextBox"
                         Margin="0,0,0,10"
                         IsReadOnly="True" />

                <!-- Branch Name -->
                <TextBlock Text="Branch Name:" FontWeight="Bold" />
                <TextBox x:Name="BranchNameTextBox"
                         Margin="0,0,0,10" />

                <!-- Shift Type -->
                <TextBlock Text="Shift Type:" FontWeight="Bold" />
                <TextBox x:Name="ShiftTypeTextBox"
                         Margin="0,0,0,10" />

                <!-- Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Cancel"
                            Margin="0,0,10,0"
                            Padding="8,4"
                            Click="Cancel_Click" />

                    <Button x:Name="SaveButton"
                            Content="Save"
                            Background="#6378FF"
                            Foreground="White"
                            Padding="8,4"
                            Click="Save_Click" />
                </StackPanel>

            </StackPanel>
        </ScrollViewer>
    </Border>
</UserControl>
