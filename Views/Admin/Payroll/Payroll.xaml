<UserControl
    x:Class="HillsCafeManagement.Views.Admin.Payroll.Payroll"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:av="http://schemas.microsoft.com/expression/blend/2008"
    mc:Ignorable="av"
    Background="#2A2B40"
    av:DesignHeight="600"
    av:DesignWidth="1000">

    <Grid x:Name="RootGrid" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- Header -->
            <RowDefinition Height="Auto"/>  <!-- Search + Buttons -->
            <RowDefinition Height="Auto"/>  <!-- Period Toolbar -->
            <RowDefinition Height="*"/>     <!-- DataGrid -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="💰 Payroll Records"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="White"
                   Margin="0,0,0,20"/>

        <!-- Search and Action Buttons -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Search Box -->
            <Border Background="#D9D9D9"
                    CornerRadius="10"
                    Padding="8"
                    Margin="0,0,10,0">
                <Grid>
                    <TextBox x:Name="SearchBox"
                             Background="Transparent"
                             BorderThickness="0"
                             Foreground="Black"
                             FontSize="14"
                             VerticalContentAlignment="Center"
                             TextChanged="SearchBox_TextChanged"/>
                </Grid>
            </Border>

            <!-- Add Payroll Button -->
            <Button Grid.Column="1"
                    Content="Add Payroll"
                    Click="AddPayroll_Click"
                    Background="#6378FF"
                    Foreground="White"
                    FontWeight="Bold"
                    Padding="10,5"
                    Cursor="Hand"
                    BorderThickness="0">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <!-- Positions & Salaries Button (Payroll Setup) -->
            <Button Grid.Column="3"
                    Content="Positions &amp; Salaries"
                    Click="OpenPositionSalary_Click"
                    Background="#424BFF"
                    Foreground="White"
                    FontWeight="Bold"
                    Padding="10,5"
                    Cursor="Hand"
                    BorderThickness="0">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>

        <!-- ========================= -->
        <!-- Period Toolbar            -->
        <!-- ========================= -->
        <Grid Grid.Row="2" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>   <!-- "Period:" -->
                <ColumnDefinition Width="180"/>    <!-- Period combo -->
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="Auto"/>   <!-- "From:" -->
                <ColumnDefinition Width="160"/>    <!-- Start picker -->
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="Auto"/>   <!-- "To:" -->
                <ColumnDefinition Width="160"/>    <!-- End picker -->
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>   <!-- Generate btn -->
            </Grid.ColumnDefinitions>

            <!-- Period Label -->
            <TextBlock Text="Period:"
                       VerticalAlignment="Center"
                       Foreground="White"
                       Margin="0,0,8,0"/>

            <!-- Period Combo -->
            <ComboBox x:Name="PeriodCombo"
                      Grid.Column="1"
                      VerticalAlignment="Center"
                      SelectedIndex="0"
                      Background="White"
                      Foreground="Black"
                      Padding="4"
                      BorderThickness="0">
                <ComboBoxItem Content="FirstHalf" />
                <ComboBoxItem Content="SecondHalf" />
                <ComboBoxItem Content="Custom" />
            </ComboBox>

            <!-- From Label (visible only for Custom) -->
            <TextBlock Grid.Column="3"
                       Text="From:"
                       VerticalAlignment="Center"
                       Foreground="White"
                       Margin="0,0,8,0">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedItem.Content, ElementName=PeriodCombo}" Value="Custom">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>

            <!-- Start Date (visible only for Custom) -->
            <DatePicker x:Name="CustomStartPicker"
                        Grid.Column="4"
                        VerticalAlignment="Center"
                        Padding="4"
                        BorderThickness="0">
                <DatePicker.Style>
                    <Style TargetType="DatePicker">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedItem.Content, ElementName=PeriodCombo}" Value="Custom">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DatePicker.Style>
            </DatePicker>

            <!-- To Label (visible only for Custom) -->
            <TextBlock Grid.Column="6"
                       Text="To:"
                       VerticalAlignment="Center"
                       Foreground="White"
                       Margin="0,0,8,0">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedItem.Content, ElementName=PeriodCombo}" Value="Custom">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>

            <!-- End Date (visible only for Custom) -->
            <DatePicker x:Name="CustomEndPicker"
                        Grid.Column="7"
                        VerticalAlignment="Center"
                        Padding="4"
                        BorderThickness="0">
                <DatePicker.Style>
                    <Style TargetType="DatePicker">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedItem.Content, ElementName=PeriodCombo}" Value="Custom">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DatePicker.Style>
            </DatePicker>

            <!-- Generate Button -->
            <Button Grid.Column="9"
                    x:Name="GenerateButton"
                    Content="Generate Payroll"
                    Click="GeneratePayroll_Click"
                    Background="#57B894"
                    Foreground="White"
                    FontWeight="Bold"
                    Padding="10,5"
                    Cursor="Hand"
                    BorderThickness="0">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>

        <!-- Payroll DataGrid -->
        <DataGrid Grid.Row="3"
                  ItemsSource="{Binding PayrollList}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  Background="#2A2B40"
                  Foreground="Black"
                  RowBackground="#D9D9D9"
                  AlternatingRowBackground="#D9D9D9"
                  BorderThickness="0"
                  GridLinesVisibility="None"
                  ColumnHeaderHeight="40"
                  RowHeight="40"
                  Margin="0,10,0,0">

            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#6378FF"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                </Style>
            </DataGrid.Resources>

            <DataGrid.Columns>
                <DataGridTextColumn Header="Employee ID" Binding="{Binding EmployeeId}" Width="*" />
                <DataGridTextColumn Header="Full Name" Binding="{Binding EmployeeFullName}" Width="*" />
                <DataGridTextColumn Header="Period Start" Binding="{Binding StartDate, StringFormat=\{0:yyyy-MM-dd\}}" Width="*" />
                <DataGridTextColumn Header="Period End" Binding="{Binding EndDate, StringFormat=\{0:yyyy-MM-dd\}}" Width="*" />
                <DataGridTextColumn Header="Days Worked" Binding="{Binding TotalDaysWorked}" Width="*" />
                <DataGridTextColumn Header="Gross Salary" Binding="{Binding GrossSalary, StringFormat=₱{0:N2}}" Width="*" />
                <DataGridTextColumn Header="SSS" Binding="{Binding SssDeduction, StringFormat=₱{0:N2}}" Width="*" />
                <DataGridTextColumn Header="PhilHealth" Binding="{Binding PhilhealthDeduction, StringFormat=₱{0:N2}}" Width="*" />
                <DataGridTextColumn Header="Pag-IBIG" Binding="{Binding PagibigDeduction, StringFormat=₱{0:N2}}" Width="*" />
                <DataGridTextColumn Header="Other Deductions" Binding="{Binding OtherDeductions, StringFormat=₱{0:N2}}" Width="*" />
                <DataGridTextColumn Header="Bonus" Binding="{Binding Bonus, StringFormat=₱{0:N2}}" Width="*" />
                <DataGridTextColumn Header="Net Salary" Binding="{Binding NetSalary, StringFormat=₱{0:N2}}" Width="*" />

                <!-- Actions -->
                <DataGridTemplateColumn Header="Actions" Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <!-- Edit -->
                                <Button Content="📝"
                                        ToolTip="Edit"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        FontSize="16"
                                        Margin="0,0,6,0"
                                        Click="EditPayroll_Click"
                                        DataContext="{Binding}" />
                                <!-- Delete -->
                                <Button Content="🗑"
                                        ToolTip="Delete"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        FontSize="16"
                                        Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
