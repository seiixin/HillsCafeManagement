<UserControl
    x:Class="HillsCafeManagement.Views.Admin.Users.AddEditUser"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    mc:Ignorable="d"
    d:DesignWidth="400" d:DesignHeight="400"
    Background="#99000000">
    <!-- semi-transparent overlay -->

    <Border
        Width="400"
        Background="White"
        Padding="20"
        CornerRadius="10"
        VerticalAlignment="Center"
        HorizontalAlignment="Center">

        <StackPanel>
            <!-- Title -->
            <TextBlock x:Name="TitleText"
                       Text="Add / Edit User"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="#6378FF"
                       Margin="0,0,0,10"
                       TextAlignment="Center" />

            <!-- Email -->
            <TextBlock Text="Email:" FontWeight="Bold" />
            <TextBox x:Name="EmailTextBox"
                     Margin="0,0,0,10" />

            <!-- Password -->
            <TextBlock Text="Password:" FontWeight="Bold" />
            <PasswordBox x:Name="PasswordBox"
                         Margin="0,0,0,10" />

            <!-- Role -->
            <TextBlock Text="Role:" FontWeight="Bold" />
            <ComboBox x:Name="RoleComboBox"
                      Margin="0,0,0,10"
                      ItemsSource="{Binding Roles}" />

            <!-- Linked Employee (optional) -->
            <TextBlock Text="Linked Employee (optional):" FontWeight="Bold" />
            <ComboBox x:Name="EmployeeComboBox"
                      Margin="0,0,0,10"
                      DisplayMemberPath="FullName"
                      SelectedValuePath="Id"
                      ItemsSource="{Binding Employees}" />

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancel"
                        Margin="0,0,10,0"
                        Padding="8,4"
                        Click="Cancel_Click" />

                <Button x:Name="SaveButton"
                        Content="Save"
                        Background="#6378FF"
                        Foreground="White"
                        Padding="8,4"
                        Click="Save_Click" />
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
