<UserControl x:Class="HillsCafeManagement.Views.Admin.Dashboard.Dashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#2E3047">

    <StackPanel Margin="20" Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Center" Width="800">

        <!-- Header -->
        <DockPanel Margin="0,0,0,20">
            <TextBlock Text="Dashboard"
                       FontSize="24"
                       FontWeight="SemiBold"
                       Foreground="White"
                       DockPanel.Dock="Left" />
            <Button Content="🔔"
                    Width="32"
                    Height="32"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Background="Transparent"
                    Foreground="White"
                    BorderBrush="Transparent"
                    Cursor="Hand"/>
        </DockPanel>

        <!-- Cards -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
            <Border Background="#D3D4DB" CornerRadius="10" Width="200" Margin="5">
                <StackPanel HorizontalAlignment="Center" Margin="10">
                    <TextBlock Text="254,021.24 PHP" FontSize="16" FontWeight="Bold" Foreground="#0e9f6e" />
                    <TextBlock Text="Total Sales Today" FontSize="12" Foreground="#333" />
                </StackPanel>
            </Border>
            <Border Background="#D3D4DB" CornerRadius="10" Width="200" Margin="5">
                <StackPanel HorizontalAlignment="Center" Margin="10">
                    <TextBlock Text="29" FontSize="16" FontWeight="Bold" Foreground="#ef4444" />
                    <TextBlock Text="Active Employee" FontSize="12" Foreground="#333" />
                </StackPanel>
            </Border>
            <Border Background="#D3D4DB" CornerRadius="10" Width="200" Margin="5">
                <StackPanel HorizontalAlignment="Center" Margin="10">
                    <TextBlock Text="14" FontSize="16" FontWeight="Bold" Foreground="#2563eb" />
                    <TextBlock Text="Inventory Low Items" FontSize="12" Foreground="#333" />
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Monthly Sales -->
        <Border Background="#3A3D56" CornerRadius="12" Margin="0,0,0,0" Width="760">
            <StackPanel Margin="15">
                <DockPanel Margin="0,0,0,10">
                    <TextBlock Text="Hills Cafe Monthly Sales"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="#D4D4D8"
                               DockPanel.Dock="Left" />
                    <ComboBox Width="120"
                              DockPanel.Dock="Right"
                              Foreground="black"
                              Background="#232438"
                              BorderBrush="#5C5F7A"
                              SelectedIndex="0">
                        <ComboBoxItem Content="January"/>
                        <ComboBoxItem Content="February"/>
                        <ComboBoxItem Content="March"/>
                        <ComboBoxItem Content="April"/>
                        <ComboBoxItem Content="May"/>
                        <ComboBoxItem Content="June"/>
                        <ComboBoxItem Content="July"/>
                        <ComboBoxItem Content="August"/>
                        <ComboBoxItem Content="September"/>
                        <ComboBoxItem Content="October"/>
                        <ComboBoxItem Content="November"/>
                        <ComboBoxItem Content="December"/>
                    </ComboBox>
                </DockPanel>
                <Border Height="200" Background="#232438" CornerRadius="6" HorizontalAlignment="Stretch" VerticalAlignment="Center">
                    <TextBlock Text="(Chart placeholder)" 
                               Foreground="Gray" 
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Center" />
                </Border>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>
