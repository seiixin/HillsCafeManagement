<UserControl x:Class="HillsCafeManagement.Views.Admin.Tables.Tables"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:HillsCafeManagement.Views.Admin.Tables"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">

    <UserControl.Resources>
        <x:Array x:Key="DesignData" Type="{x:Type local:TableItem}">
            <local:TableItem TableNumber="1" Capacity="4" Status="Available"/>
            <local:TableItem TableNumber="2" Capacity="4" Status="Occupied"/>
            <local:TableItem TableNumber="3" Capacity="2" Status="Available"/>
        </x:Array>
    </UserControl.Resources>

    <Grid Background="#252942" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="🍽 Tables Management"
                   FontSize="28"
                   FontWeight="SemiBold"
                   Foreground="White"
                   Margin="0,0,0,20" />

        <!-- DataGrid -->
        <DataGrid Grid.Row="1"
                  ItemsSource="{StaticResource DesignData}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  Background="#252942"
                  Foreground="Black"
                  RowBackground="#D9D9D9"
                  AlternatingRowBackground="#D9D9D9"
                  BorderThickness="0"
                  GridLinesVisibility="None"
                  ColumnHeaderHeight="40"
                  RowHeight="40"
                  Margin="0,10,0,0">

            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#4568f0"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                </Style>
            </DataGrid.Resources>

            <DataGrid.Columns>
                <DataGridTextColumn Header="Table Number" Binding="{Binding TableNumber}" Width="*" />
                <DataGridTextColumn Header="Capacity" Binding="{Binding Capacity}" Width="*" />
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*" />

                <DataGridTemplateColumn Header="Actions" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="📝"
                                        ToolTip="Edit"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        FontSize="16"
                                        Margin="0,0,5,0"
                                        Cursor="Hand"/>
                                <Button Content="🗑"
                                        ToolTip="Delete"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        FontSize="16"
                                        Cursor="Hand"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
