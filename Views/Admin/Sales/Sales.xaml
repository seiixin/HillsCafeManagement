<UserControl x:Class="HillsCafeManagement.Views.Admin.Sales.Sales"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#2A2B40">

    <StackPanel Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="Sales and Reports"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="White"
                   Margin="0,0,0,20"
                   HorizontalAlignment="Center"/>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Report Period:"
                       Foreground="White"
                       VerticalAlignment="Center"
                       Margin="0,0,10,0"/>
            <ComboBox Width="150" SelectedIndex="0">
                <ComboBoxItem Content="Daily"/>
                <ComboBoxItem Content="Weekly"/>
                <ComboBoxItem Content="Monthly"/>
                <ComboBoxItem Content="Quarterly"/>
                <ComboBoxItem Content="Yearly"/>
            </ComboBox>
        </StackPanel>

        <Button Content="Generate Report"
                Width="150"
                Margin="0,0,0,10"
                Padding="6"
                Background="#6378FF"
                Foreground="White"
                BorderThickness="0"
                HorizontalAlignment="Center"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Export CSV"
                    Width="100"
                    Margin="0,0,10,0"
                    Padding="6"
                    Background="#039e49"
                    Foreground="White"
                    BorderThickness="0"/>
            <Button Content="Export PDF"
                    Width="100"
                    Padding="6"
                    Background="#039e49"
                    Foreground="White"
                    BorderThickness="0"/>
        </StackPanel>
    </StackPanel>
</UserControl>
