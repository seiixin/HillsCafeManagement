<UserControl x:Class="HillsCafeManagement.Views.Admin.Sales.Sales"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#2A2B40">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="📈 Sales &amp; Receipts Summary"
                   FontSize="26"
                   FontWeight="Bold"
                   Foreground="White"/>

        <!-- Controls -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10,0,10">
            <TextBlock Text="Report Period:" Foreground="White" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <ComboBox Width="160"
                      ItemsSource="{Binding PeriodChoices}"
                      SelectedItem="{Binding SelectedPeriod}"
                      Margin="0,0,10,0"/>
            <Button Content="Generate" Width="120" Margin="0,0,8,0"
                    Background="#6378FF" Foreground="White" BorderThickness="0"
                    Command="{Binding GenerateCommand}"/>
            <Button Content="Export CSV" Width="120" Margin="0,0,8,0"
                    Background="#039e49" Foreground="White" BorderThickness="0"
                    Command="{Binding ExportCsvCommand}"/>
            <Button Content="Export PDF" Width="120"
                    Background="#039e49" Foreground="White" BorderThickness="0"
                    Command="{Binding ExportPdfCommand}"/>
        </StackPanel>

        <!-- Grid -->
        <DataGrid Grid.Row="2"
                  ItemsSource="{Binding Rows}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  Background="#2A2B40"
                  Foreground="Black"
                  RowBackground="#D9D9D9"
                  AlternatingRowBackground="#D9D9D9"
                  BorderThickness="0"
                  GridLinesVisibility="None"
                  ColumnHeaderHeight="40"
                  RowHeight="36">
            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#6378FF"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Period"   Binding="{Binding Period}" Width="2*"/>
                <DataGridTextColumn Header="From"
                                    Binding="{Binding StartDate, StringFormat='{}{0:yyyy-MM-dd}'}"
                                    Width="*"/>
                <DataGridTextColumn Header="To"
                                    Binding="{Binding EndDate, StringFormat='{}{0:yyyy-MM-dd}'}"
                                    Width="*"/>
                <DataGridTextColumn Header="Receipts" Binding="{Binding ReceiptCount}" Width="*"/>
                <DataGridTextColumn Header="Total"
                                    Binding="{Binding TotalAmount, StringFormat='{}{0:0.##}'}"
                                    Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Footer totals -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <TextBlock Text="{Binding TotalReceipts, StringFormat='Receipts: {0}'}"
                       Foreground="White" Margin="0,0,12,0"/>
            <TextBlock Text="{Binding GrandTotal, StringFormat='Total: {0:0.##}'}"
                       Foreground="White" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</UserControl>
