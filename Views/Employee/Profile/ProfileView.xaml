<UserControl x:Class="HillsCafeManagement.Views.Employee.Profile.ProfileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#2A2B40">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0"
                   Text="Profile"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="White"
                   Margin="0,0,0,16"/>

        <!-- Card -->
        <Border Grid.Row="1"
                Background="#BDBDBD"
                CornerRadius="10"
                Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Avatar + change button -->
                <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Top">
                    <!-- Simple circular avatar using ImageBrush -->
                    <Ellipse Width="140" Height="140">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="{Binding Employee.ImageUrl}" Stretch="UniformToFill"/>
                        </Ellipse.Fill>
                    </Ellipse>

                    <Button Content="Change Profile Picture"
                            Margin="0,12,0,0"
                            Padding="12,6"
                            Command="{Binding ChangePhotoCommand}"
                            Background="#4B5563"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"/>
                </StackPanel>

                <!-- Details form -->
                <Grid Grid.Column="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="24"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left column -->
                    <StackPanel Grid.Column="0" VerticalAlignment="Top">
                        <TextBlock Text="Full Name:" FontWeight="SemiBold" />
                        <TextBox x:Name="tbFullName" Text="{Binding Employee.FullName, UpdateSourceTrigger=PropertyChanged}"
                                 IsReadOnly="True" Background="White" Padding="8" Margin="0,0,0,8"/>

                        <TextBlock Text="Age:" FontWeight="SemiBold" />
                        <TextBox x:Name="tbAge" Text="{Binding Employee.Age, TargetNullValue=''}"
                                 IsReadOnly="True" Background="White" Padding="8" Margin="0,0,0,8"/>

                        <TextBlock Text="Sex:" FontWeight="SemiBold" />
                        <TextBox x:Name="tbSex" Text="{Binding Employee.Sex}"
                                 IsReadOnly="True" Background="White" Padding="8" Margin="0,0,0,8"/>

                        <TextBlock Text="Address:" FontWeight="SemiBold" />
                        <TextBox x:Name="tbAddress" Text="{Binding Employee.Address}"
                                 IsReadOnly="True" Background="White" Padding="8" Margin="0,0,0,8"/>

                        <TextBlock Text="Birthday:" FontWeight="SemiBold" />
                        <TextBox x:Name="tbBirthday" Text="{Binding Employee.Birthday, StringFormat=\{0:yyyy-MM-dd\}, TargetNullValue=''}"
                                 IsReadOnly="True" Background="White" Padding="8" Margin="0,0,0,8"/>

                        <TextBlock Text="Contact Number:" FontWeight="SemiBold" />
                        <TextBox x:Name="tbContact" Text="{Binding Employee.ContactNumber}"
                                 IsReadOnly="True" Background="White" Padding="8" Margin="0,0,0,8"/>

                        <TextBlock Text="Position:" FontWeight="SemiBold" />
                        <TextBox x:Name="tbPosition" Text="{Binding Employee.Position}"
                                 IsReadOnly="True" Background="White" Padding="8" Margin="0,0,0,8"/>

                        <TextBlock Text="Salary Per Day:" FontWeight="SemiBold" />
                        <TextBox x:Name="tbSalary" Text="{Binding Employee.SalaryPerDay, TargetNullValue='', StringFormat=\{0:0.##\}}"
                                 IsReadOnly="True" Background="White" Padding="8" Margin="0,0,0,8"/>
                    </StackPanel>

                    <!-- Right column -->
                    <StackPanel Grid.Column="2" VerticalAlignment="Top">
                        <TextBlock Text="SSS Number:" FontWeight="SemiBold" />
                        <TextBox x:Name="tbSSS" Text="{Binding Employee.SssNumber}"
                                 IsReadOnly="True" Background="White" Padding="8" Margin="0,0,0,8"/>

                        <TextBlock Text="PhilHealth Number" FontWeight="SemiBold" />
                        <TextBox x:Name="tbPhilhealth" Text="{Binding Employee.PhilhealthNumber}"
                                 IsReadOnly="True" Background="White" Padding="8" Margin="0,0,0,8"/>

                        <TextBlock Text="Pag-Ibig Number:" FontWeight="SemiBold" />
                        <TextBox x:Name="tbPagibig" Text="{Binding Employee.PagibigNumber}"
                                 IsReadOnly="True" Background="White" Padding="8" Margin="0,0,0,8"/>

                        <TextBlock Text="Email:" FontWeight="SemiBold" />
                        <TextBox x:Name="tbEmail" Text="{Binding Employee.UserAccount.Email}"
                                 IsReadOnly="True" Background="White" Padding="8" Margin="0,0,0,8"/>

                        <TextBlock Text="Emergency Contact:" FontWeight="SemiBold" />
                        <TextBox x:Name="tbEmergency" Text="{Binding Employee.EmergencyContact}"
                                 IsReadOnly="True" Background="White" Padding="8" Margin="0,0,0,8"/>

                        <TextBlock Text="Date Hired:" FontWeight="SemiBold" />
                        <TextBox x:Name="tbHired" Text="{Binding Employee.DateHired, StringFormat=\{0:yyyy-MM-dd\}, TargetNullValue=''}"
                                 IsReadOnly="True" Background="White" Padding="8" Margin="0,0,0,8"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- Footer button -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button x:Name="btnEditSave"
                    Content="Edit"
                    Width="120"
                    Padding="12,6"
                    Background="#374151"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="OnEditSaveClicked"/>
        </StackPanel>
    </Grid>
</UserControl>
