<UserControl x:Class="HillsCafeManagement.Views.Employee.Profile.ProfileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#2A2B40">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <Style x:Key="ReadOnlyTextBox" TargetType="TextBox">
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="IsTabStop" Value="False"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0"
                   Text="Profile"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="White"
                   Margin="0,0,0,16"/>

        <!-- Card -->
        <Border Grid.Row="1"
                Background="#BDBDBD"
                CornerRadius="10"
                Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Avatar + admin-only change button -->
                <StackPanel Grid.Column="0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top">
                    <Ellipse Width="140" Height="140">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="{Binding Employee.ImageUrl, FallbackValue={x:Null}}"
                                        Stretch="UniformToFill"/>
                        </Ellipse.Fill>
                    </Ellipse>


                </StackPanel>

                <!-- Details -->
                <Grid Grid.Column="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="24"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left column -->
                    <StackPanel Grid.Column="0" VerticalAlignment="Top">
                        <TextBlock Text="Full Name:" FontWeight="SemiBold" />
                        <TextBox x:Name="tbFullName" Style="{StaticResource ReadOnlyTextBox}"
                                 Text="{Binding Employee.FullName, Mode=OneWay, TargetNullValue=—, FallbackValue=—}"/>

                        <TextBlock Text="Age:" FontWeight="SemiBold" />
                        <TextBox x:Name="tbAge" Style="{StaticResource ReadOnlyTextBox}"
                                 Text="{Binding Employee.Age, Mode=OneWay, TargetNullValue=—, FallbackValue=—}"/>

                        <TextBlock Text="Sex:" FontWeight="SemiBold" />
                        <TextBox x:Name="tbSex" Style="{StaticResource ReadOnlyTextBox}"
                                 Text="{Binding Employee.Sex, Mode=OneWay, TargetNullValue=—, FallbackValue=—}"/>

                        <TextBlock Text="Address:" FontWeight="SemiBold" />
                        <TextBox x:Name="tbAddress" Style="{StaticResource ReadOnlyTextBox}"
                                 Text="{Binding Employee.Address, Mode=OneWay, TargetNullValue=—, FallbackValue=—}"/>

                        <TextBlock Text="Birthday:" FontWeight="SemiBold" />
                        <TextBox x:Name="tbBirthday" Style="{StaticResource ReadOnlyTextBox}"
                                 Text="{Binding Employee.Birthday, Mode=OneWay,
                                                StringFormat={}{0:yyyy-MM-dd},
                                                TargetNullValue=—, FallbackValue=—}"/>

                        <TextBlock Text="Contact Number:" FontWeight="SemiBold" />
                        <TextBox x:Name="tbContact" Style="{StaticResource ReadOnlyTextBox}"
                                 Text="{Binding Employee.ContactNumber, Mode=OneWay, TargetNullValue=—, FallbackValue=—}"/>

                        <TextBlock Text="Position:" FontWeight="SemiBold" />
                        <TextBox x:Name="tbPosition" Style="{StaticResource ReadOnlyTextBox}"
                                 Text="{Binding Employee.Position, Mode=OneWay, TargetNullValue=—, FallbackValue=—}"/>

                        <TextBlock Text="Salary Per Day:" FontWeight="SemiBold" />
                        <TextBox x:Name="tbSalary" Style="{StaticResource ReadOnlyTextBox}"
                                 Text="{Binding Employee.SalaryPerDay, Mode=OneWay,
                                                StringFormat={}{0:0.##},
                                                TargetNullValue=—, FallbackValue=—}"/>
                    </StackPanel>

                    <!-- Right column -->
                    <StackPanel Grid.Column="2" VerticalAlignment="Top">
                        <TextBlock Text="SSS Number:" FontWeight="SemiBold" />
                        <TextBox x:Name="tbSSS" Style="{StaticResource ReadOnlyTextBox}"
                                 Text="{Binding Employee.SssNumber, Mode=OneWay, TargetNullValue=—, FallbackValue=—}"/>

                        <TextBlock Text="PhilHealth Number:" FontWeight="SemiBold" />
                        <TextBox x:Name="tbPhilhealth" Style="{StaticResource ReadOnlyTextBox}"
                                 Text="{Binding Employee.PhilhealthNumber, Mode=OneWay, TargetNullValue=—, FallbackValue=—}"/>

                        <TextBlock Text="Pag-IBIG Number:" FontWeight="SemiBold" />
                        <TextBox x:Name="tbPagibig" Style="{StaticResource ReadOnlyTextBox}"
                                 Text="{Binding Employee.PagibigNumber, Mode=OneWay, TargetNullValue=—, FallbackValue=—}"/>

                        <TextBlock Text="Email:" FontWeight="SemiBold" />
                        <TextBox x:Name="tbEmail" Style="{StaticResource ReadOnlyTextBox}"
                                 Text="{Binding Employee.UserAccount.Email, Mode=OneWay, TargetNullValue=—, FallbackValue=—}"/>

                        <TextBlock Text="Emergency Contact:" FontWeight="SemiBold" />
                        <TextBox x:Name="tbEmergency" Style="{StaticResource ReadOnlyTextBox}"
                                 Text="{Binding Employee.EmergencyContact, Mode=OneWay, TargetNullValue=—, FallbackValue=—}"/>

                        <TextBlock Text="Date Hired:" FontWeight="SemiBold" />
                        <TextBox x:Name="tbHired" Style="{StaticResource ReadOnlyTextBox}"
                                 Text="{Binding Employee.DateHired, Mode=OneWay,
                                                StringFormat={}{0:yyyy-MM-dd},
                                                TargetNullValue=—, FallbackValue=—}"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- Footer actions -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,12,0,0">
            <!-- Keep original name & click handler to satisfy existing code-behind -->

        </StackPanel>
    </Grid>
</UserControl>
