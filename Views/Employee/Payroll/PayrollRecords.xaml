<UserControl x:Class="HillsCafeManagement.Views.Employee.Payroll.PayrollRecords"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="900" d:DesignHeight="600"
             Background="Transparent">

    <Border Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Text="My Payroll Records"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="White" />

            <!-- Toolbar -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,12,0,8" VerticalAlignment="Center">
                <!-- Search box with WPF-style watermark -->
                <Grid Width="280" Margin="0,0,8,0" VerticalAlignment="Center">
                    <TextBox x:Name="SearchBox"
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             Padding="6,4"/>
                    <TextBlock Text="Search..."
                               Margin="10,0,0,0"
                               VerticalAlignment="Center"
                               Foreground="#80FFFFFF"
                               IsHitTestVisible="False">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <!-- Show hint when empty -->
                                    <DataTrigger Binding="{Binding Text, ElementName=SearchBox}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                    <!-- Hide while focused and user is typing -->
                                    <DataTrigger Binding="{Binding IsKeyboardFocusWithin, ElementName=SearchBox}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>

                <Button Content="Refresh" Width="100" Command="{Binding RefreshCommand}" />

                <TextBlock Text="{Binding LastMessage}"
                           Foreground="LightGreen"
                           Margin="12,3,0,0"
                           VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Table -->
            <DataGrid Grid.Row="2"
                      ItemsSource="{Binding Payrolls}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      CanUserAddRows="False"
                      HeadersVisibility="Column"
                      RowHeaderWidth="0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Pay Date"
                                        Binding="{Binding EndDate, StringFormat={}{0:yyyy-MM-dd}}"
                                        Width="*"/>
                    <DataGridTextColumn Header="Period Start"
                                        Binding="{Binding StartDate, StringFormat={}{0:yyyy-MM-dd}}"
                                        Width="*"/>
                    <DataGridTextColumn Header="Days Worked"
                                        Binding="{Binding TotalDaysWorked}"
                                        Width="*"/>
                    <DataGridTextColumn Header="Gross Salary"
                                        Binding="{Binding GrossSalary, StringFormat={}{0:N2}}"
                                        Width="*"/>
                    <DataGridTextColumn Header="Bonus"
                                        Binding="{Binding Bonus, StringFormat={}{0:N2}}"
                                        Width="*"/>
                    <DataGridTextColumn Header="SSS"
                                        Binding="{Binding SssDeduction, StringFormat={}{0:N2}}"
                                        Width="*"/>
                    <DataGridTextColumn Header="PhilHealth"
                                        Binding="{Binding PhilhealthDeduction, StringFormat={}{0:N2}}"
                                        Width="*"/>
                    <DataGridTextColumn Header="Pag-IBIG"
                                        Binding="{Binding PagibigDeduction, StringFormat={}{0:N2}}"
                                        Width="*"/>
                    <DataGridTextColumn Header="Other Deductions"
                                        Binding="{Binding OtherDeductions, StringFormat={}{0:N2}}"
                                        Width="*"/>
                    <DataGridTextColumn Header="Net Salary"
                                        Binding="{Binding NetSalary, StringFormat={}{0:N2}}"
                                        Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Border>
</UserControl>
