<UserControl
    x:Class="HillsCafeManagement.Views.Cashier.POS.POSView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="#2A2B40">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- ===================== Left: Product List ===================== -->
        <StackPanel Margin="0,0,10,0">
            <TextBlock FontSize="24" FontWeight="Bold" Foreground="White"
                       Text="🧾 POS Panel" Margin="0,0,0,20"/>

            <!-- Table picker (admin VM data) -->
            <TextBlock FontWeight="Bold" FontSize="16" Foreground="White" Text="Table Number:"/>
            <ComboBox Width="220" Margin="0,5,0,10"
                      ItemsSource="{Binding TablesForPicker}"
                      SelectedValuePath="TableNumber"
                      SelectedValue="{Binding EditingOrder.TableNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      IsTextSearchEnabled="True" TextSearch.TextPath="TableNumber">
                <ComboBox.ItemContainerStyle>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="IsEnabled" Value="{Binding Selectable}"/>
                        <Setter Property="ToolTip"    Value="{Binding Status}"/>
                    </Style>
                </ComboBox.ItemContainerStyle>
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding TableNumber}" FontWeight="Bold"/>
                            <TextBlock Text="  •  "/>
                            <TextBlock Text="{Binding Status}"/>
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <!-- Category filter (built in code-behind) -->
            <TextBlock FontWeight="Bold" FontSize="16" Foreground="White" Text="Filter by Category:"/>
            <ComboBox x:Name="CategoryCombo" Width="220" Margin="0,5,0,10"
                      SelectionChanged="CategoryCombo_SelectionChanged"/>

            <!-- Product search (plain TextBox) -->
            <TextBlock FontSize="12" Foreground="#CCCCCC" Text="Search products..." Margin="0,0,0,2"/>
            <TextBox x:Name="SearchBox"
                     Margin="0,0,0,10"
                     Padding="8"
                     FontSize="14"
                     VerticalContentAlignment="Center"
                     Background="White"
                     Foreground="Black"
                     BorderThickness="1"
                     BorderBrush="#CCCCCC"
                     TextChanged="SearchBox_TextChanged"/>

            <!-- Menu list (filtered list set in code-behind) -->
            <ListView x:Name="ProductList"
                      Background="#D9D9D9"
                      BorderThickness="0"
                      Height="320">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="4">
                            <TextBlock Text="{Binding Name}" Width="180"/>
                            <TextBlock Text="{Binding Price, StringFormat=₱{0:N2}}" Width="100"/>
                            <Button Content="+ Add"
                                    Click="AddProduct_Click"
                                    Background="#6378FF"
                                    Foreground="White"
                                    FontWeight="Bold"
                                    BorderThickness="0"
                                    Padding="6,2"
                                    Margin="10,0,0,0"
                                    Cursor="Hand"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>

        <!-- ===================== Right: Add Order (same as admin editor) ===================== -->
        <Grid Grid.Column="1" Margin="10,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header row with table + payment + status + total -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,12" VerticalAlignment="Top">
                <TextBlock Text="Create Order" FontSize="20" FontWeight="Bold" Margin="0,0,12,0"/>

                <!-- Table -->
                <TextBlock Text="•  Table:" VerticalAlignment="Center" Margin="12,0,4,0" Foreground="White"/>
                <ComboBox Width="180"
                          ItemsSource="{Binding TablesForPicker}"
                          SelectedValuePath="TableNumber"
                          SelectedValue="{Binding EditingOrder.TableNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          IsTextSearchEnabled="True"
                          TextSearch.TextPath="TableNumber">
                    <ComboBox.ItemContainerStyle>
                        <Style TargetType="ComboBoxItem">
                            <Setter Property="IsEnabled" Value="{Binding Selectable}"/>
                            <Setter Property="ToolTip"    Value="{Binding Status}"/>
                        </Style>
                    </ComboBox.ItemContainerStyle>
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding TableNumber}" FontWeight="Bold"/>
                                <TextBlock Text="  •  "/>
                                <TextBlock Text="{Binding Status}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <!-- Payment -->
                <TextBlock Text="•  Payment:" VerticalAlignment="Center" Margin="12,0,4,0" Foreground="White"/>
                <ComboBox Width="120"
                          ItemsSource="{Binding PaymentStatuses}"
                          SelectedItem="{Binding EditingOrder.PaymentStatus, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                <!-- Status -->
                <TextBlock Text="•  Status:" VerticalAlignment="Center" Margin="12,0,4,0" Foreground="White"/>
                <ComboBox Width="140"
                          ItemsSource="{Binding OrderStatuses}"
                          SelectedItem="{Binding EditingOrder.OrderStatus, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                <!-- Total -->
                <TextBlock Text="•  Total:" VerticalAlignment="Center" Margin="12,0,4,0" Foreground="White"/>
                <TextBlock Text="{Binding EditingOrder.TotalAmount, StringFormat=\{0:0.##\}}"
                           FontWeight="Bold" VerticalAlignment="Center" Foreground="White"/>
            </StackPanel>

            <!-- Items grid -->
            <DataGrid Grid.Row="1"
                      ItemsSource="{Binding EditingItems}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      HeadersVisibility="Column"
                      Background="#D9D9D9"
                      RowBackground="#D9D9D9"
                      AlternatingRowBackground="#D9D9D9"
                      BorderThickness="0"
                      ColumnHeaderHeight="40"
                      RowHeight="40"
                      CellEditEnding="ItemsGrid_CellEditEnding">
                <DataGrid.Resources>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#6378FF"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    </Style>
                </DataGrid.Resources>
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="Product" Width="2*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding ProductName}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <ComboBox ItemsSource="{Binding DataContext.MenuProducts, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                          DisplayMemberPath="Name"
                                          SelectedValuePath="Id"
                                          SelectedValue="{Binding ProductId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          SelectionChanged="ProductCombo_SelectionChanged"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn Header="Qty"
                                        Binding="{Binding Quantity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        Width="1*"/>

                    <DataGridTextColumn Header="Unit Price"
                                        Binding="{Binding UnitPrice, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat=\{0:0.##\}}"
                                        Width="1.2*"/>

                    <DataGridTextColumn Header="Subtotal"
                                        IsReadOnly="True"
                                        Binding="{Binding Subtotal, StringFormat=\{0:0.##\}}"
                                        Width="1.2*"/>

                    <DataGridTemplateColumn Header="Actions" Width="1*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="✖" ToolTip="Remove"
                                        Click="RemoveLine_Click"
                                        Padding="4" Margin="4,0,0,0"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Footer buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                <Button Content="+ Add Item" Margin="0,0,8,0" Click="AddLine_Click"/>
                <Button Content="Save" Background="#6378FF" Foreground="White" Margin="0,0,8,0" Click="SaveEditor_Click"/>
                <Button Content="Cancel" Click="CancelEditor_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>