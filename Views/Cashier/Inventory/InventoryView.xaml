<UserControl x:Class="HillsCafeManagement.Views.Cashier.Inventory.InventoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#282c44">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="📦 Inventory &amp; Expiry Alerts"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="White"
                   Margin="0,0,0,20" />

        <!-- Main content area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Vertical">

                <!-- Search + Refresh (no Add, no Edit/Delete) -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- Simple search (no external converter needed) -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Search Product Name or Category"
                                   Foreground="#B0B0B0"
                                   Margin="2,0,0,2"/>
                        <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 Height="30"
                                 Background="#d1d3d4"
                                 Foreground="Black"
                                 Padding="5"
                                 BorderThickness="0"/>
                    </StackPanel>

                    <!-- Only Refresh for cashier -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="🔄 Refresh"
                                Command="{Binding RefreshCommand}"
                                Background="#17a2b8"
                                Foreground="White"
                                Padding="10,5"
                                Margin="5,0"
                                BorderThickness="0"
                                FontWeight="Bold"
                                Cursor="Hand" />
                    </StackPanel>
                </Grid>

                <!-- Inventory Table (read-only; no Actions column) -->
                <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="300">
                    <DataGrid ItemsSource="{Binding FilteredItems}"
                              SelectedItem="{Binding SelectedItem}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              CanUserAddRows="False"
                              Background="#D9D9D9"
                              Foreground="Black"
                              RowBackground="#D9D9D9"
                              AlternatingRowBackground="#D9D9D9"
                              BorderThickness="0"
                              GridLinesVisibility="None"
                              ColumnHeaderHeight="40"
                              RowHeight="40"
                              Margin="0,0,0,20">
                        <DataGrid.Resources>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#606cff" />
                                <Setter Property="Foreground" Value="White" />
                                <Setter Property="FontWeight" Value="Bold" />
                                <Setter Property="HorizontalContentAlignment" Value="Center" />
                            </Style>
                        </DataGrid.Resources>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Product Name" Binding="{Binding ProductName}" Width="*" />
                            <DataGridTextColumn Header="Category" Binding="{Binding CategoryName}" Width="*" />
                            <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="*" />
                            <DataGridTextColumn Header="Expiry Date" Binding="{Binding ExpiryDate, StringFormat='{}{0:yyyy-MM-dd}'}" Width="*" />
                        </DataGrid.Columns>
                    </DataGrid>
                </ScrollViewer>

                <!-- Expiry Alerts header with count (same styling) -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="⚠️ Expiry Alerts"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="White" />

                    <Border Grid.Column="1"
                            Background="#dc3545"
                            CornerRadius="10"
                            Padding="8,4"
                            Margin="10,0,0,0">
                        <!-- If your VM exposes a dedicated expiring list, you can bind to it;
                             kept same as admin for parity -->
                        <TextBlock Text="{Binding InventoryItems.Count, StringFormat='{}{0} Items'}"
                                   Foreground="White"
                                   FontWeight="Bold"
                                   FontSize="12" />
                    </Border>
                </Grid>

                <!-- Expiry Alerts Table (read-only) -->
                <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="200">
                    <DataGrid ItemsSource="{Binding InventoryItems}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              CanUserAddRows="False"
                              Background="#D9D9D9"
                              Foreground="Black"
                              RowBackground="#D9D9D9"
                              AlternatingRowBackground="#D9D9D9"
                              BorderThickness="0"
                              GridLinesVisibility="None"
                              ColumnHeaderHeight="40"
                              RowHeight="40">
                        <DataGrid.Resources>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#0076a3" />
                                <Setter Property="Foreground" Value="White" />
                                <Setter Property="FontWeight" Value="Bold" />
                                <Setter Property="HorizontalContentAlignment" Value="Center" />
                            </Style>
                        </DataGrid.Resources>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Product Name" Binding="{Binding ProductName}" Width="*" />
                            <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="*" />
                            <DataGridTextColumn Header="Expiry Date" Binding="{Binding ExpiryDate, StringFormat='{}{0:yyyy-MM-dd}'}" Width="*" />
                            <DataGridTemplateColumn Header="Status" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="3" Padding="5,2">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="#28a745" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="Expired">
                                                            <Setter Property="Background" Value="#dc3545" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Expiring Soon">
                                                            <Setter Property="Background" Value="#ffc107" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Text="{Binding Status}"
                                                       Foreground="White"
                                                       FontWeight="Bold"
                                                       TextAlignment="Center" />
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </ScrollViewer>

            </StackPanel>
        </Grid>
    </Grid>
</UserControl>